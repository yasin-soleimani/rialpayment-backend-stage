{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "lib": [
      "dom",
      "es2018"
    ],
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@vision/*": [
        "@vision/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}
