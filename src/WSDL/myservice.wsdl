<definitions name = "MyService"
             targetNamespace = "http://localhost/wsdl"
             xmlns = "http://schemas.xmlsoap.org/wsdl/"
             xmlns:soap = "http://schemas.xmlsoap.org/wsdl/soap/"
             xmlns:tns = "http://www.examples.com/wsdl/MyService.wsdl"
             xmlns:xsd = "http://www.w3.org/2001/XMLSchema">

    <message name = "SalePaymentRequestRequest">
        <part name = "testParam" type = "xsd:string"/>
    </message>
    <message name = "SalePaymentRequestResponse">
        <part name = "status" type = "xsd:string"/>
    </message>
    <portType name = "MyPort">
        <operation name = "SalePaymentRequest">
            <input message = "tns:SalePaymentRequestRequest"/>
            <output message = "tns:SalePaymentRequestResponse"/>
        </operation>
    </portType>

    <binding name = "SalePaymentRequest_Binding" type = "tns:MyPort">
        <soap:binding style = "rpc"
                      transport = "http://schemas.xmlsoap.org/soap/http"/>
        <operation name = "SalePaymentRequest">
            <soap:operation soapAction = "SalePaymentRequest"/>
            <input>
                <soap:body encodingStyle = "http://schemas.xmlsoap.org/soap/encoding/" namespace = "urn:examples:MyService" use = "encoded"/>
            </input>
            <output>
                <soap:body encodingStyle = "http://schemas.xmlsoap.org/soap/encoding/" namespace = "urn:examples:MyService" use = "encoded"/>
            </output>
        </operation>
    </binding>

    <service name = "MyService">
        <documentation>WSDL File for MyService</documentation>
        <port binding = "tns:SalePaymentRequest_Binding" name = "MyPort">
            <soap:address
                    location = "http://localhost:8000/wsdl/" />
        </port>
    </service>

</definitions>